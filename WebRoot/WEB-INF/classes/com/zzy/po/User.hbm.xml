<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.zzy.po">
	<class name="User" table="user">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="username" type="java.lang.String" length="15" not-null="true"/>
		<property name="password" type="java.lang.String" length="15" not-null="true"/>
		<many-to-one name="avatar" class="Avatar" column="avatar_id" unique="true" fetch="join"/>
		<set name="comments" fetch="join" inverse="true" cascade="all">
			<key column="comment_id"/>
			<one-to-many class="Comment"/>
		</set>
	</class>
</hibernate-mapping>
